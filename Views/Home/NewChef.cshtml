@model Chef
@{
    ViewData["Title"] = "Home Page";
}

<a asp-controller="Home" asp-action="Chefs">Home</a>
<div class="text-center">
    <h1 class="display-4">Add a Chef!</h1>
</div>
<div class="text-center">
    <form asp-action="ChefToDb" asp-controller="Home" method="post">
        <div class="form-group">
            <span asp-validation-for="FirstName"></span>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName">
        </div>
        <div class="form-group">
            <span asp-validation-for="LastName"></span>
            <label asp-for="LastName"></label>
            <input asp-for="LastName">
        </div>
        <div class="form-group">
            <span asp-validation-for="Birthdate"></span>
            <label asp-for="Birthdate"></label>
            <input type="date" asp-for="Birthdate">
        </div>   
        <button class="btn-default"><input type="submit" value="Add Chef"></button>
    </form>
</div>
