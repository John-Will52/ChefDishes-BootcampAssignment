@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Add a new Dish!</h1>
    <p>Check out some recent dishes!</p>
    <a asp-controller="Home" asp-action="Dishes">Home</a>
</div>
<div class="text-left">
    <form asp-action="DishToDb" asp-controller="Home" method="post">
        <div class="form-group">
            <span asp-validation-for="NewDish.Name"></span>
            <label asp-for="NewDish.Name"></label>
            <input asp-for="NewDish.Name">
        </div>
        <div class="form-group">
        <span asp-validation-for="NewDish.ChefId"></span>
            <label asp-for="NewDish.ChefId"></label>
            <select asp-for="NewDish.ChefId">
                @foreach (var chef in ViewBag.Chefs)
                {
                    <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <span asp-validation-for="NewDish.Tastiness"></span>
            <label asp-for="NewDish.Tastiness"></label>
            <select asp-for="NewDish.Tastiness">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="form-group">
            <span asp-validation-for="NewDish.Calories"></span>
            <label asp-for="NewDish.Calories"></label>
            <input asp-for="NewDish.Calories">
        </div>
        <div class="form-group">
            <span asp-validation-for="NewDish.Description"></span>
            <label asp-for="NewDish.Description"></label>
            <textarea asp-for="NewDish.Description" rows="10" cols="50"></textarea>
        </div>   
        <button class="btn-default"><input type="submit" value="Add Dish"></button>
    </form>
</div>
